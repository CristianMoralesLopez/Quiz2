<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"
    android:gravity="center">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/startagrocol"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/forma_edit_text"
        android:text="La siguiente encuesta se hará con el fin de recolectar información a cerca del mercado que estamos atendiendo para llevar a cabo el Crowdfunding."
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Registro"
            android:id="@+id/NuevoRegistro"
            android:background="@drawable/button"
            android:padding="5dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Estadisticas"
            android:id="@+id/Estadisticas"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:padding="5dp"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>